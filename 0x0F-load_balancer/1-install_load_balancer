#!/usr/bin/env bash
#HAproxy
apt-get update
apt-get install haproxy
echo "ENABLED=1" > /etc/default/haproxy

echo "
  listen load_balancer
  bind *:80
  mode http
  balance roundrobin
  option forwardfor 
  option httpclose
  server 396377-web-01 34.203.201.154:80 check
  server 396377-web-02 100.26.132.249:80 check" >/etc/haproxy/haproxy.cfg
systemctl enable haproxy
service haproxy restart
